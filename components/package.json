{
    "name": "react-native-components",
    "version": "0.0.0",
    "description": "Reusable React Native components for PX Blue applications",
    "repository": "https://github.com/pxblue/react-native-component-library",
    "license": "BSD-3-Clause",
    "scripts": {
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
        "build": "tsc --p tsconfig.lib.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "verify-build": "tsc --noEmit",
        "watch:showcase": "tsc --p tsconfig.lib.json --watch --outdir ../demos/showcase/node_modules/@pxblue/react-native-components",
        "prettier": "prettier \"src/**/**.{ts,tsx,js,jsx,json,css,scss,html}\" --write",
        "prettier:check": "prettier \"src/**/**.{ts,tsx,js,jsx,json,css,scss,html}\" --check"
    },
    "prettier": "@pxblue/prettier-config",
    "dependencies": {
        "@pxblue/colors": "^3.0.0",
        "color": "^3.1.2",
        "react-native-collapsible": "^1.5.2",
        "react-native-keyboard-aware-scroll-view": "^0.8.0",
        "react-native-status-bar-height": "^2.3.1"
    },
    "peerDependencies": {
        "react": "^16.8.6",
        "react-native": "^0.60.4",
        "react-native-paper": "^3.10.1",
        "react-native-safe-area-context": "~0.7.0",
        "react-native-vector-icons": "^6.6.0"
    },
    "devDependencies": {
        "@pxblue/eslint-config": "^2.0.0",
        "@pxblue/icons-svg": "^1.0.15",
        "@pxblue/prettier-config": "^1.0.2",
        "@react-native-community/eslint-config": "^0.0.5",
        "@types/color": "^3.0.0",
        "@types/faker": "^4.1.5",
        "@types/jest": "^24.0.15",
        "@types/react": "^16.8.23",
        "@types/react-native": "^0.60.2",
        "@types/react-native-collapsible": "^0.11.0",
        "@types/react-native-vector-icons": "^6.4.5",
        "@types/react-test-renderer": "^16.8.3",
        "@typescript-eslint/eslint-plugin": "^2.16.0",
        "@typescript-eslint/parser": "^2.16.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-react": "^7.17.0",
        "faker": "^4.1.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.8.0",
        "prettier": "^2.0.5",
        "react": "^16.8.6",
        "react-native": "^0.59.8",
        "react-native-elements": "^1.2.6",
        "react-native-paper": "^3.10.1",
        "react-native-safe-area-context": "~0.7.0",
        "react-native-svg": "^9.6.1",
        "react-native-vector-icons": "^6.6.0",
        "react-test-renderer": "^16.8.6",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.3"
    }
}
